---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ResourceLibrary from '../../components/ResourceLibrary.astro';
import '../../styles/global.css';
---

<Layout>
  <Header />
  <main class="pt-24 pb-16 px-5 max-w-7xl mx-auto">
    <div class="mb-8">
      <h1
        class="text-3xl md:text-4xl font-bold mb-3 bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent"
      >
        Study Resources Library
      </h1>
      <p class="text-gray-400 max-w-3xl text-sm md:text-base">
        Access and contribute study materials, past papers, and academic
        resources. Share your notes, discover helpful materials from fellow
        students, and collaborate to build a comprehensive resource library for
        the CS department.
      </p>
    </div>

    <ResourceLibrary />
  </main>
  <Footer />
</Layout>
