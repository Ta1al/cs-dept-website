---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
import ScrollAnimator from '../components/ScrollAnimator.astro';
import HeaderController from '../components/HeaderController.astro';
import '../styles/global.css';

// Society data
const societies = [
	{
		name: 'Programming Society',
		description: 'Where passionate coders unite to learn, compete, and build amazing projects together',
		icon: 'üíª',
		color: 'from-green-400 to-blue-600',
		borderColor: 'hover:border-green-500/50',
		link: '/societies/ps'
	},
	{
		name: 'Computing Media Society',
		description: 'Exploring the intersection of technology and media through creative projects.',
		icon: 'üé•',
		color: 'from-cyan-400 to-teal-600',
		borderColor: 'hover:border-cyan-500/50',
		link: '/societies/cms'
	},
	{
		name: 'E-Gaming Society',
		description: 'Uniting gamers through competition, strategy, and fun.',
		icon: 'üéÆ',
		color: 'from-blue-400 to-purple-600',
		borderColor: 'hover:border-blue-500/50',
		link: '/societies/egaming'
	},
	{
		name: 'Event Management Society',
		description: 'Crafting unforgettable experiences with precision and flair.',
		icon: 'ü¶∫',
		color: 'from-red-400 to-orange-600',
		borderColor: 'hover:border-red-500/50',
		link: '/societies/ems'
	},
	{
		name: 'Performing Arts Society',
		description: 'Showcasing talent through drama, music, and expression.',
		icon: 'üé≠',
		color: 'from-purple-400 to-pink-600',
		borderColor: 'hover:border-purple-500/50',
		link: '/societies/pas'
	},
	{
		name: 'Sports Society',
		description: 'Promoting teamwork, fitness, and the spirit of competition.',
		icon: 'üèè',
		color: 'from-orange-400 to-yellow-600',
		borderColor: 'hover:border-orange-500/50',
		link: '/societies/sports'
	},
	{
		name: 'Blood Donation & Welfare Society',
		description: 'Saving lives and serving humanity with compassion.',
		icon: 'ü©∏',
		color: 'from-cyan-400 to-teal-600',
		borderColor: 'hover:border-cyan-500/50',
		link: '/societies/blood-donation'
	}
];
---

<Layout>
	<Header />
	<main>
		<Hero />
		
		<!-- About Our Department Section -->
		<section class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden">
			<div class="container mx-auto px-6">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
					<!-- Text Content -->
					<div class="space-y-6">
						<div class="inline-block">
							<span class="bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-2 rounded-full text-sm font-semibold">
								Excellence in Education
							</span>
						</div>
						<h2 class="text-4xl lg:text-5xl font-bold text-white leading-tight">
							Shaping the 
							<span class="bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
								Future of Technology
							</span>
						</h2>
						<p class="text-xl text-gray-300 leading-relaxed">
							Our Computer Science Department combines cutting-edge research, innovative teaching methods, 
							and strong industry partnerships to prepare students for tomorrow's technological challenges.
						</p>
						<div class="grid grid-cols-2 gap-6 mt-8">
							<div class="space-y-2">
								<div class="text-2xl font-bold text-blue-400">180+</div>
								<div class="text-gray-400">Research Publications</div>
							</div>
							<div class="space-y-2">
								<div class="text-2xl font-bold text-purple-400">500+</div>
								<div class="text-gray-400">Alumni Network</div>
							</div>
						</div>
						<div class="pt-4">
							<a href="/about" 
							   class="inline-flex items-center bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 group">
								Learn More About Us
								<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<!-- Department Image -->
					<div class="relative">
						<div class="relative rounded-2xl overflow-hidden shadow-2xl transform rotate-2 hover:rotate-0 transition-transform duration-500">
							<img 
								src="/dept.webp" 
								alt="Computer Science Department - Modern facilities and collaborative learning spaces"
								class="w-full h-[500px] object-cover"
								loading="lazy"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
						</div>
						
						<!-- Floating Elements -->
						<div class="absolute -top-6 -right-6 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full p-4 shadow-lg animate-pulse">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						
						<div class="absolute -bottom-4 -left-4 bg-gradient-to-r from-green-500 to-blue-500 rounded-xl p-3 shadow-lg">
							<div class="text-white font-bold text-sm">Department Front</div>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Background Decoration -->
			<div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-purple-600/10 rounded-full blur-3xl"></div>
			<div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"></div>
		</section>
		
		<!-- Student Societies -->
		<section class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden" id="societies">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-6">
						<span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">
							Student Societies
						</span>
					</h2>
					<p class="text-xl text-gray-300 max-w-3xl mx-auto">
						Join passionate communities of students sharing your interests and ambitions
					</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{societies.map((society) => (
						<div class={`group bg-gradient-to-br from-gray-800/50 to-gray-900/80 backdrop-blur-sm border border-gray-700 rounded-2xl p-8 transform hover:scale-105 transition-all duration-500 ${society.borderColor} cursor-pointer`}>
							<div class={`w-16 h-16 bg-gradient-to-br ${society.color} rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 text-2xl`}>
								{society.icon}
							</div>
							
							<h3 class="text-2xl font-bold text-white mb-4">{society.name}</h3>
							<p class="text-gray-300 mb-6 leading-relaxed">
								{society.description}
							</p>
							
							<a href={society.link} 
							   class={`inline-flex items-center bg-gradient-to-r ${society.color} hover:opacity-90 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform group-hover:scale-105 group`}>
								Learn More
								<svg class="w-5 h-5 ml-2 transform transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					))}
				</div>
				
				
			</div>
			
			<!-- Background Decoration -->
			<div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-purple-600/10 rounded-full blur-3xl"></div>
			<div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"></div>
		</section>
	</main>
	<Footer />
	
	<!-- Interactive Components -->
	<ScrollAnimator />
	<HeaderController />
</Layout>


