---
import Layout from '../../layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import '../../styles/global.css';
---

<Layout>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"
      >
      </div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span
            class="bg-gradient-to-r from-yellow-400 to-amber-400 bg-clip-text text-transparent"
          >
            Final Year Projects
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Discover innovative projects from our talented students showcasing
          their skills and creativity. Each project represents months of
          dedication, research, and implementation.
        </p>
      </div>
    </section>

    <!-- Final Year Projects Showcase -->
    <section
      class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden"
    >
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-yellow-400 to-amber-400 bg-clip-text text-transparent"
            >
              Featured Projects (Batch 2022-26 onwards)
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            Our students work on cutting-edge technologies and real-world
            problems that make a difference
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- FYP 1 -->
          <div
            class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-yellow-500/50 transition-all duration-300 transform hover:scale-105"
          >
            <div class="mb-4">
              <div
                class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-lg flex items-center justify-center mb-4"
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <h3
                class="text-xl font-bold text-white mb-2 group-hover:text-yellow-300 transition-colors"
              >
                AI-Powered System Requirements Specification Generator
              </h3>
              <p class="text-gray-400 text-sm mb-3">
                Batch 2022-26 â€¢ Natural Language Processing, AI
              </p>
              <p class="text-gray-300 text-sm mb-4">
                An intelligent system using deep learning to assist in
                generating system requirements specifications from natural
                language inputs.
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                <span
                  class="text-xs bg-yellow-500/20 text-yellow-300 px-2 py-1 rounded"
                  >Python</span
                >
                <span
                  class="text-xs bg-blue-500/20 text-blue-300 px-2 py-1 rounded"
                  >HuggingFace</span
                >
                <span
                  class="text-xs bg-green-500/20 text-green-300 px-2 py-1 rounded"
                  >Next.js</span
                >
              </div>
              <div class="text-sm text-gray-400">
                <strong>Students:</strong> Talal, Tayyab, Ibrahim
              </div>
            </div>
          </div>
        </div>

        <!-- Background Decoration -->
        <div
          class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-yellow-500/10 to-amber-600/10 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-0 right-0 w-64 h-64 bg-gradient-to-tr from-orange-500/10 to-red-500/10 rounded-full blur-3xl"
        >
        </div>
      </div>
    </section>
    <Footer />
  </main>

  <style>
    .grid-pattern {
      background-image: radial-gradient(
        circle at 1px 1px,
        rgba(255, 255, 255, 0.15) 1px,
        transparent 0
      );
      background-size: 20px 20px;
    }
  </style>
</Layout>
