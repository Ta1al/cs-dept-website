---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout>
  <Header />
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"></div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>
      
      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">
            About Our Department
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Leading the way in computer science education, research, and innovation for over two decades
        </p>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Mission -->
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold mb-6">
                <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
                  Our Mission
                </span>
              </h2>
              <p class="text-gray-300 text-lg leading-relaxed mb-6">
                To provide world-class education in computer science, foster innovation through cutting-edge research, 
                and prepare students to become leaders in the rapidly evolving technology landscape.
              </p>
              <p class="text-gray-400 leading-relaxed">
                We are committed to excellence in teaching, research, and service while maintaining strong 
                partnerships with industry and contributing to the advancement of computer science knowledge.
              </p>
            </div>

            <!-- Values -->
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-white">Our Core Values</h3>
              <div class="grid grid-cols-2 gap-4">
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                  <span class="text-gray-300">Innovation</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                  <span class="text-gray-300">Excellence</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                  <span class="text-gray-300">Collaboration</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                  <span class="text-gray-300">Integrity</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Vision -->
          <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-8">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
                Our Vision
              </span>
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed mb-6">
              To be a globally recognized department that shapes the future of computing through 
              transformative education, groundbreaking research, and meaningful partnerships.
            </p>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-400 mb-2">25+</div>
                <div class="text-gray-400 text-sm">Years of Excellence</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-purple-400 mb-2">5000+</div>
                <div class="text-gray-400 text-sm">Alumni Worldwide</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Head of Department -->
    <section class="py-20 bg-gradient-to-b from-gray-950 to-gray-900">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span class="bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent">
              Message from HOD
            </span>
          </h2>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-br from-gray-800/60 to-gray-900/60 backdrop-blur-sm border border-gray-700 rounded-2xl p-8 md:p-12">
            <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
              <!-- HOD Photo -->
              <div class="flex-shrink-0">
                <div class="w-32 h-32 md:w-48 md:h-48 bg-gradient-to-br from-blue-400 to-purple-600 rounded-full flex items-center justify-center">
                  <svg class="w-16 h-16 md:w-24 md:h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              </div>

              <!-- HOD Message -->
              <div class="flex-1 text-center md:text-left">
                <h3 class="text-2xl md:text-3xl font-bold text-white mb-2">Dr. Sarah Johnson</h3>
                <p class="text-blue-300 font-medium mb-6">Head of Department</p>
                
                <blockquote class="text-gray-300 text-lg leading-relaxed italic mb-6">
                  "Welcome to our Computer Science Department, where innovation meets education. 
                  We are dedicated to nurturing the next generation of technology leaders who will 
                  shape our digital future. Our commitment to excellence in research, teaching, 
                  and industry collaboration ensures that our students are well-prepared for the 
                  challenges and opportunities that lie ahead."
                </blockquote>
                
                <div class="space-y-2 text-sm text-gray-400">
                  <p><span class="text-blue-400">Education:</span> Ph.D. in Computer Science, MIT</p>
                  <p><span class="text-blue-400">Research:</span> Machine Learning, Computer Vision</p>
                  <p><span class="text-blue-400">Experience:</span> 20+ years in academia and industry</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Faculty Showcase -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span class="bg-gradient-to-r from-purple-400 to-cyan-400 bg-clip-text text-transparent">
              Our Faculty
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Meet our distinguished faculty members who are leaders in their respective fields
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Faculty Member 1 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-blue-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Prof. Michael Chen</h3>
            <p class="text-blue-300 text-center text-sm mb-4">AI & Machine Learning</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Leading researcher in deep learning and neural networks with 100+ publications
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-blue-500/20 text-blue-300 text-xs rounded-full">
                Ph.D. Stanford
              </span>
            </div>
          </div>

          <!-- Faculty Member 2 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-purple-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Dr. Emily Rodriguez</h3>
            <p class="text-purple-300 text-center text-sm mb-4">Cybersecurity</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Expert in cryptography and network security with industry partnerships
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-purple-500/20 text-purple-300 text-xs rounded-full">
                Ph.D. Carnegie Mellon
              </span>
            </div>
          </div>

          <!-- Faculty Member 3 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-cyan-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-cyan-400 to-cyan-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Prof. David Kumar</h3>
            <p class="text-cyan-300 text-center text-sm mb-4">Software Engineering</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              20+ years experience in large-scale software systems and architecture
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-cyan-500/20 text-cyan-300 text-xs rounded-full">
                Ph.D. UC Berkeley
              </span>
            </div>
          </div>

          <!-- Faculty Member 4 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-green-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Dr. Lisa Wang</h3>
            <p class="text-green-300 text-center text-sm mb-4">Data Science</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Specialist in big data analytics and statistical machine learning
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-green-500/20 text-green-300 text-xs rounded-full">
                Ph.D. Harvard
              </span>
            </div>
          </div>

          <!-- Faculty Member 5 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-orange-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Prof. James Thompson</h3>
            <p class="text-orange-300 text-center text-sm mb-4">Human-Computer Interaction</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Pioneer in UX design and interface development methodologies
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-orange-500/20 text-orange-300 text-xs rounded-full">
                Ph.D. MIT
              </span>
            </div>
          </div>

          <!-- Faculty Member 6 -->
          <div class="group bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 hover:border-pink-500/50 transition-all duration-300 transform hover:scale-105">
            <div class="w-20 h-20 bg-gradient-to-br from-pink-400 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white text-center mb-2">Dr. Rachel Adams</h3>
            <p class="text-pink-300 text-center text-sm mb-4">Quantum Computing</p>
            <p class="text-gray-400 text-sm text-center mb-4">
              Leading quantum algorithms research with breakthrough publications
            </p>
            <div class="text-center">
              <span class="inline-flex items-center px-3 py-1 bg-pink-500/20 text-pink-300 text-xs rounded-full">
                Ph.D. Caltech
              </span>
            </div>
          </div>
        </div>

        <div class="text-center mt-12">
          <a href="/faculty" class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 px-8 py-4 rounded-xl font-semibold transition-all duration-300 transform hover:scale-105">
            View All Faculty
          </a>
        </div>
      </div>
    </section>

    <!-- Department History -->
    <section class="py-20 bg-gradient-to-b from-gray-900 to-gray-950">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
              Our Journey
            </span>
          </h2>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            A brief timeline of our department's growth and achievements
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-blue-500 to-purple-500"></div>

            <!-- Timeline events -->
            <div class="space-y-16">
              <!-- 2000 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8 text-right">
                  <h3 class="text-xl font-bold text-blue-400 mb-2">2000</h3>
                  <p class="text-gray-300">Department founded with 50 students and 5 faculty members</p>
                </div>
                <div class="w-4 h-4 bg-blue-500 rounded-full z-10 relative"></div>
                <div class="flex-1 pl-8"></div>
              </div>

              <!-- 2005 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8"></div>
                <div class="w-4 h-4 bg-purple-500 rounded-full z-10 relative"></div>
                <div class="flex-1 pl-8">
                  <h3 class="text-xl font-bold text-purple-400 mb-2">2005</h3>
                  <p class="text-gray-300">Launched Master's program and established research labs</p>
                </div>
              </div>

              <!-- 2010 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8 text-right">
                  <h3 class="text-xl font-bold text-cyan-400 mb-2">2010</h3>
                  <p class="text-gray-300">Introduced PhD program and opened AI research center</p>
                </div>
                <div class="w-4 h-4 bg-cyan-500 rounded-full z-10 relative"></div>
                <div class="flex-1 pl-8"></div>
              </div>

              <!-- 2015 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8"></div>
                <div class="w-4 h-4 bg-green-500 rounded-full z-10 relative"></div>
                <div class="flex-1 pl-8">
                  <h3 class="text-xl font-bold text-green-400 mb-2">2015</h3>
                  <p class="text-gray-300">Reached 1000+ students and established industry partnerships</p>
                </div>
              </div>

              <!-- 2020 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8 text-right">
                  <h3 class="text-xl font-bold text-orange-400 mb-2">2020</h3>
                  <p class="text-gray-300">Launched online programs and quantum computing lab</p>
                </div>
                <div class="w-4 h-4 bg-orange-500 rounded-full z-10 relative"></div>
                <div class="flex-1 pl-8"></div>
              </div>

              <!-- 2025 -->
              <div class="flex items-center justify-between">
                <div class="flex-1 pr-8"></div>
                <div class="w-4 h-4 bg-pink-500 rounded-full z-10 relative animate-pulse"></div>
                <div class="flex-1 pl-8">
                  <h3 class="text-xl font-bold text-pink-400 mb-2">2025</h3>
                  <p class="text-gray-300">Leading innovation with 2000+ students and cutting-edge research</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script>
  // Smooth scrolling and animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const element = entry.target as HTMLElement;
          element.style.opacity = '1';
          element.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    // Observe all sections
    document.querySelectorAll('section').forEach(section => {
      const element = section as HTMLElement;
      element.style.opacity = '0';
      element.style.transform = 'translateY(30px)';
      element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
      observer.observe(section);
    });
  });
</script>
