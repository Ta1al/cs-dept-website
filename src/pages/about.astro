---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout>
  <Header />
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"></div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>
      
      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent">
            About Our Department
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Leading the way in computer science education, research, and innovation for over two decades
        </p>
      </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Mission -->
          <div class="space-y-8">
            <div>
              <h2 class="text-3xl md:text-4xl font-bold mb-6">
                <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">
                  Our Mission
                </span>
              </h2>
              <p class="text-gray-300 text-lg leading-relaxed mb-6">
                To provide world-class education in computer science, foster innovation through cutting-edge research, 
                and prepare students to become leaders in the rapidly evolving technology landscape.
              </p>
              <p class="text-gray-400 leading-relaxed">
                We are committed to excellence in teaching, research, and service while maintaining strong 
                partnerships with industry and contributing to the advancement of computer science knowledge.
              </p>
            </div>

            <!-- Values -->
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-white">Our Core Values</h3>
              <div class="grid grid-cols-2 gap-4">
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-blue-400 rounded-full"></div>
                  <span class="text-gray-300">Innovation</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-purple-400 rounded-full"></div>
                  <span class="text-gray-300">Excellence</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                  <span class="text-gray-300">Collaboration</span>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                  <span class="text-gray-300">Integrity</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Vision -->
          <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-8">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
                Our Vision
              </span>
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed mb-6">
              To be a globally recognized department that shapes the future of computing through 
              transformative education, groundbreaking research, and meaningful partnerships.
            </p>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-8">
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-400 mb-2">25+</div>
                <div class="text-gray-400 text-sm">Years of Excellence</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-purple-400 mb-2">5000+</div>
                <div class="text-gray-400 text-sm">Alumni Worldwide</div>
