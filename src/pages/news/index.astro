---
import Layout from '../../layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import { getCollection } from 'astro:content';
import '../../styles/global.css';

const news = (await getCollection('news')).sort(
  (a, b) =>
    new Date(b.data.publishDate).getTime() -
    new Date(a.data.publishDate).getTime()
);
const featured = news.find((n) => n.data.featured === true) ?? news[0];
const rest = news.filter((n) => n.slug !== featured?.slug);
---

<Layout>
  <Header />
  <main class="pt-24 pb-16 px-5 max-w-7xl mx-auto">
    <div class="mb-8">
      <h1
        class="text-3xl md:text-4xl font-bold mb-2 bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent"
      >
        News & Announcements
      </h1>
      <p class="text-gray-400 max-w-2xl text-sm md:text-base">
        Stay up to date with department highlights, events, and important
        updates.
      </p>
    </div>

    {
      featured && (
        <a
          href={`/news/${featured.slug}`}
          class="block overflow-hidden rounded-2xl border border-gray-800 bg-gradient-to-br from-gray-900/80 to-gray-900/40 p-6 md:p-8 mb-10 hover:border-blue-500/50 transition-all shadow-lg"
        >
          <div class="flex flex-col md:flex-row items-start gap-6">
            <div class="flex-1">
              <div class="flex items-center gap-2 text-xs text-gray-400 mb-3">
                <span class="inline-flex items-center gap-1 px-2 py-1 rounded bg-blue-500/10 text-blue-300 border border-blue-500/30">
                  <svg
                    class="w-3.5 h-3.5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  {new Date(featured.data.publishDate).toLocaleDateString()}
                </span>
                {featured.data.category && (
                  <span class="inline-flex items-center gap-1 px-2 py-1 rounded bg-purple-500/10 text-purple-300 border border-purple-500/30">
                    {featured.data.category}
                  </span>
                )}
                {featured.data.author && (
                  <span class="inline-flex items-center gap-1 px-2 py-1 rounded bg-gray-800 text-gray-300 border border-gray-700">
                    <svg
                      class="w-3.5 h-3.5"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5.121 17.804A9 9 0 1112 21a9 9 0 01-6.879-3.196z"
                      />
                    </svg>
                    {featured.data.author}
                  </span>
                )}
                {featured.data.featured && (
                  <span class="inline-flex items-center gap-1 px-2 py-1 rounded bg-amber-500/10 text-amber-300 border border-amber-500/30">
                    Featured
                  </span>
                )}
              </div>
              <h2 class="text-2xl md:text-3xl font-bold text-white leading-snug mb-2">
                {featured.data.title}
              </h2>
              {featured.data.description && (
                <p class="text-gray-300/90 text-sm md:text-base">
                  {featured.data.description}
                </p>
              )}
            </div>
          </div>
        </a>
      )
    }

    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-6">
      {
        rest.map((item) => (
          <a
            href={`/news/${item.slug}`}
            class="group block bg-gray-900/50 border border-gray-800 rounded-xl p-5 hover:border-blue-500/50 transition-all hover:-translate-y-0.5"
          >
            <div class="flex items-center justify-between mb-2">
              <span class="inline-flex items-center gap-1 text-xs px-2 py-1 rounded bg-blue-500/10 text-blue-300 border border-blue-500/30">
                <svg
                  class="w-3.5 h-3.5"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
                {new Date(item.data.publishDate).toLocaleDateString()}
              </span>
              {item.data.category && (
                <span class="text-[11px] px-2 py-1 rounded bg-purple-500/10 text-purple-300 border border-purple-500/30">
                  {item.data.category}
                </span>
              )}
            </div>
            <h3 class="text-lg font-semibold text-white group-hover:text-blue-400 transition-colors">
              {item.data.title}
            </h3>
            {item.data.description && (
              <p class="text-sm text-gray-400 mt-2 line-clamp-3">
                {item.data.description}
              </p>
            )}
            {item.data.author && (
              <div class="mt-3 text-xs text-gray-500">
                By {item.data.author}
              </div>
            )}
          </a>
        ))
      }
    </div>

    {
      news.length === 0 && (
        <div class="text-center py-16 bg-gray-900/40 border border-gray-800 rounded-xl text-gray-400">
          No news yet.
        </div>
      )
    }
  </main>
  <Footer />
</Layout>

<!-- Scoped styles for this page -->
<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
