---
import Layout from '../../layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import { getSocietyById } from '../../utils/societyData';
import '../../styles/global.css';

const society = getSocietyById('ems');
if (!society) {
  throw new Error('Event Management Society data not found');
}
---

<Layout>
  <Header />
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"
      >
      </div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <div
          class={`w-32 h-32 md:w-40 md:h-40 rounded-full p-4 flex items-center justify-center mx-auto mb-8 overflow-hidden bg-white/5 ring-1 ring-white/10 backdrop-blur-sm`}
        >
          <img
            src={society.logo}
            alt={`${society.name} Logo`}
            class="w-full h-full object-contain"
            loading="lazy"
            width="160"
            height="160"
          />
        </div>

        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span
            class={`bg-gradient-to-r ${society.color} bg-clip-text text-transparent`}
          >
            {society.name}
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          {society.description}
        </p>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              <span
                class="bg-gradient-to-r from-red-400 to-orange-600 bg-clip-text text-transparent"
              >
                About Our Society
              </span>
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed mb-6">
              The Event Management Society specializes in organizing and
              executing memorable events that bring our community together. From
              academic conferences to cultural celebrations, we handle every
              detail with professionalism and creativity.
            </p>
            <p class="text-gray-400 leading-relaxed mb-8">
              Our team develops skills in project management, logistics
              coordination, vendor relations, and creative planning while
              creating experiences that leave lasting impressions.
            </p>

            <!-- Key Features -->
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                <span class="text-gray-300">Event Planning & Coordination</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
                <span class="text-gray-300">Project Management Training</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                <span class="text-gray-300">Vendor & Logistics Management</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
                <span class="text-gray-300">Creative Design & Theming</span>
              </div>
            </div>
          </div>

          <div class="relative">
            <div
              class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl p-8 backdrop-blur-sm border border-gray-700"
            >
              <h3 class="text-2xl font-bold text-white mb-6">
                Create Memorable Events!
              </h3>
              <p class="text-gray-300 mb-6">
                Join us in creating exceptional events that bring people
                together and create lasting memories.
              </p>
              <button
                class="bg-gradient-to-r from-red-400 to-orange-600 hover:from-red-500 hover:to-orange-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
              >
                Join Our Team
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gradient-to-br from-gray-900 to-gray-950">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-red-400 to-orange-600 bg-clip-text text-transparent"
            >
              Our Expertise
            </span>
          </h2>
          <p class="text-gray-300 max-w-2xl mx-auto">
            We specialize in various types of events, each requiring unique
            skills and attention to detail
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6"
          >
            <div class="text-3xl mb-4">üéì</div>
            <h3 class="text-xl font-bold text-white mb-3">Academic Events</h3>
            <p class="text-gray-400">
              Conferences, seminars, workshops, and graduation ceremonies
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6"
          >
            <div class="text-3xl mb-4">üéâ</div>
            <h3 class="text-xl font-bold text-white mb-3">Cultural Events</h3>
            <p class="text-gray-400">
              Festivals, talent shows, cultural nights, and celebrations
            </p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6"
          >
            <div class="text-3xl mb-4">üèÜ</div>
            <h3 class="text-xl font-bold text-white mb-3">Competitions</h3>
            <p class="text-gray-400">
              Tournaments, contests, hackathons, and award ceremonies
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
