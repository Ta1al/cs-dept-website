---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getSocietyById } from '../../utils/societyData';
import '../../styles/global.css';

const society = getSocietyById('blood-donation');
if (!society) {
  throw new Error('Blood Donation & Welfare Society data not found');
}
---

<Layout>
  <Header />
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"
      >
      </div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <div
          class={`w-24 h-24 bg-gradient-to-br ${society.color} rounded-full flex items-center justify-center mx-auto mb-6 overflow-hidden`}
        >
          <img
            src={society.logo}
            alt={`${society.name} Logo`}
            class="w-16 h-16 object-contain"
          />
        </div>

        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span
            class={`bg-gradient-to-r ${society.color} bg-clip-text text-transparent`}
          >
            {society.name}
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          {society.description}
        </p>
      </div>
    </section>

    <!-- About Section -->
    <section class="py-20">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              <span
                class="bg-gradient-to-r from-red-400 to-pink-600 bg-clip-text text-transparent"
              >
                About Our Society
              </span>
            </h2>
            <p class="text-gray-300 text-lg leading-relaxed mb-6">
              The Blood Donation & Welfare Society is dedicated to saving lives
              through voluntary blood donation and various welfare activities.
              We organize regular blood donation drives, health awareness
              campaigns, and community service initiatives.
            </p>
            <p class="text-gray-400 leading-relaxed mb-8">
              Our mission extends beyond blood donation to include supporting
              underprivileged communities, disaster relief efforts, and
              promoting overall social welfare.
            </p>

            <!-- Key Features -->
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                <span class="text-gray-300">Regular Blood Donation Drives</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
                <span class="text-gray-300">Health Awareness Campaigns</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
                <span class="text-gray-300">Community Service Projects</span>
              </div>
              <div class="flex items-center space-x-3">
                <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
                <span class="text-gray-300">Emergency Blood Support</span>
              </div>
            </div>
          </div>

          <div class="relative">
            <div
              class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl p-8 backdrop-blur-sm border border-gray-700"
            >
              <h3 class="text-2xl font-bold text-white mb-6">
                Save Lives With Us!
              </h3>
              <p class="text-gray-300 mb-6">
                Join our mission to save lives and serve humanity. Every
                donation can make a difference in someone's life.
              </p>
              <button
                class="bg-gradient-to-r from-red-400 to-pink-600 hover:from-red-500 hover:to-pink-700 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
              >
                Join Our Mission
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Impact Section -->
    <section class="py-20 bg-gradient-to-br from-gray-900 to-gray-950">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold mb-6">
            <span
              class="bg-gradient-to-r from-red-400 to-pink-600 bg-clip-text text-transparent"
            >
              Our Impact
            </span>
          </h2>
          <p class="text-gray-300 max-w-2xl mx-auto">
            See how our society is making a difference in the community through
            various initiatives
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 text-center"
          >
            <div class="text-3xl mb-4">‚ù§Ô∏è</div>
            <h3 class="text-2xl font-bold text-white mb-3">500+</h3>
            <p class="text-gray-400">Lives Saved Through Blood Donation</p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 text-center"
          >
            <div class="text-3xl mb-4">üè•</div>
            <h3 class="text-2xl font-bold text-white mb-3">50+</h3>
            <p class="text-gray-400">Blood Donation Drives Organized</p>
          </div>

          <div
            class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 backdrop-blur-sm border border-gray-700 rounded-2xl p-6 text-center"
          >
            <div class="text-3xl mb-4">ü§ù</div>
            <h3 class="text-2xl font-bold text-white mb-3">1000+</h3>
            <p class="text-gray-400">Community Members Helped</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
