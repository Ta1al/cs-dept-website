---
import Layout from '../../layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import { societies } from '../../utils/societyData';
import '../../styles/global.css';
---

<Layout>
  <Header />
  <main >
    <!-- Hero Section -->
    <section class="py-20 relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-br from-gray-950 via-gray-900 to-gray-950"
      >
      </div>
      <div class="absolute inset-0 grid-pattern opacity-10"></div>

      <div class="container mx-auto px-6 relative z-10 text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span
            class="bg-gradient-to-r from-blue-400 to-purple-600 bg-clip-text text-transparent"
          >
            Student Societies
          </span>
        </h1>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Join passionate communities of students sharing your interests and
          ambitions. Discover opportunities for growth, leadership, and lifelong
          friendships.
        </p>
      </div>
    </section>

    <!-- Societies Grid -->
    <section
      class="py-20 bg-gradient-to-br from-gray-900 via-gray-950 to-black relative overflow-hidden"
    >
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {
            societies.map((society) => (
              <a
                href={society.link}
                class={`group bg-gradient-to-br from-gray-800/50 to-gray-900/80 backdrop-blur-sm border border-gray-700 rounded-2xl p-8 transform hover:scale-105 transition-all duration-500 ${society.borderColor} cursor-pointer block`}
              >
                <div
                  class={`w-24 h-24 md:w-32 md:h-24 rounded-2xl p-3 flex items-center justify-center mb-6 overflow-hidden bg-white/5 ring-1 ring-white/10 group-hover:ring-white/25 group-hover:scale-[1.03] transition mx-auto`}
                >
                  <img
                    src={society.logo}
                    alt={`${society.name} logo`}
                    class="w-full h-full object-contain"
                    loading="lazy"
                    width="128"
                    height="96"
                  />
                </div>

                <h3 class="text-2xl font-bold text-white mb-4 text-center">
                  {society.name}
                </h3>
                <p class="text-gray-300 mb-6 leading-relaxed text-center">
                  {society.description}
                </p>

                <div class="text-center">
                  <span
                    class={`inline-flex items-center px-4 py-2 bg-gradient-to-r ${society.color} text-white text-sm rounded-full font-semibold`}
                  >
                    Learn More
                    <svg
                      class="w-4 h-4 ml-2"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </span>
                </div>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Background Decoration -->
      <div
        class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-500/10 to-purple-600/10 rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"
      >
      </div>
    </section>

  </main>
  <Footer />
</Layout>

<style>
  .grid-pattern {
    background-image: radial-gradient(
      circle at 1px 1px,
      rgba(255, 255, 255, 0.15) 1px,
      transparent 0
    );
    background-size: 20px 20px;
  }
</style>
